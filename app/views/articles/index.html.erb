<% content_for(:title, 'Articles') %>

<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="col-8">Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>

      <tr>
        <td><%= article %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', article, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
